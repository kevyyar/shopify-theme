<style>
  #jumbo .titles h1{
    color: {{ section.settings.jumbo_color_title }}
  }
  #jumbo .titles h2{
    color: {{ section.settings.jumbo_color_subtitle }}
  }
</style>

<section id="jumbo">
  {% if section.settings.bg_type == 'video' %}
    {% if section.settings.video_type == 'vimeo' %}
      <iframe allowfullscreen="" class="bg-video" frameborder="0" mozallowfullscreen="" style="background: black;"
        webkitallowfullscreen=""
        src="//player.vimeo.com/video/{{ section.settings.video_id }}?title=0&amp;portrait=0&amp;byline=0&amp;autoplay=1&loop=1"></iframe>
    {% else %}
      <iframe class="bg-video" style="background: black; width="560" height="315" src="https://www.youtube.com/embed/{{ section.settings.video_id }}?autoplay=1&loop=1&controls=0&mute=1" frameborder="0" allowfullscreen></iframe>
    {% endif %}
  {% else %}
    <div class="bg-image" style="background-image: url('{{ section.settings.bg_image | img_url: '900x'}}'); background-size: cover; background-repeat: no-repeat; background-position: center;"></div>
  {% endif %}
  <div class="transparent-color"></div>
  <div class="titles">
    <h1>{{ section.settings.jumbo_main_title }}</h1>
    <h2>{{ section.settings.jumbo_subtitle }}</h2>
  </div>
  <div class="state">
    <span class="number">01</span>
  </div>
  <div class="store-info">
    {% for block in section.blocks %}
      {% if block.settings.bottom_image != blank %}
        <a href="{{ block.settings.bottom_image_destination }}">
          <img src="{{ block.settings.bottom_image | img_url: '300x'}}">
        </a>
      {% else %}
        <a href="#">
          <img src="{{ 'summer-girl.jpg' | asset_url }}">
        </a>
      {% endif %}
    {% endfor %}
  </div>
</section>

